<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".fragments.SignUpFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tags"
            android:textSize="30dp"
            android:textStyle="bold"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get discovered more easily by adding up to five
relevant tags to your profile."
            android:textSize="15dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:orientation="vertical"
        android:padding="5dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tagsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:gravity="center"
        android:orientation="vertical"
        >
          <com.google.android.material.button.MaterialButton
              android:id="@+id/add_more_tags"
              android:layout_width="wrap_content"
              android:layout_height="50dp"
              app:rippleColor="@color/green"
              android:layout_marginLeft="15dp"
              android:gravity="center"
              android:layout_gravity="start"
              android:foreground="@drawable/ic_add_post"
              android:foregroundTint="@color/white"
              android:foregroundGravity="left|center"
              android:text="  Add Tags"
              android:layout_marginBottom="-15dp"
              />


          <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTagsNext"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="340dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:text="Next"
            android:textAllCaps="true"
            android:textColor="#FFF"
            android:textSize="23dp"
            android:textStyle="bold"
            app:backgroundTint="#000"
            app:cornerRadius="15dp"
            app:rippleColor="#FFF"/>
    </LinearLayout>
</LinearLayout>