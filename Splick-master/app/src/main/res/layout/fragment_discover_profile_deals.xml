<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    tools:context=".fragments.discover.profile.DiscoverProfileDealsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/profile_deals_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/nodataFoundMessage"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No deals available to show"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="#FC888686"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Kindly accept deals offers from offers tab"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="#FC888686"></TextView>
    </LinearLayout>

</RelativeLayout>