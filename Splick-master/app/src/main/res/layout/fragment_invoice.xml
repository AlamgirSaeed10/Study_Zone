<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:orientation="vertical"
    android:padding="25dp"
    tools:context=".fragments.payment.InvoiceFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upcoming Invoice"
        android:textAppearance="?attr/textAppearanceHeadline5">

    </TextView>

    <androidx.cardview.widget.CardView
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="340dp"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        app:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/upcomingInvoiceAmount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="$4,356"
            android:textAppearance="?attr/textAppearanceHeadline4"
            android:textColor="#000"
            android:textStyle="bold"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Previous Invoices"
        android:textSize="25dp">

    </TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/previousInvoicesListView"
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:layout_height="wrap_content">

        </ListView>

        <LinearLayout
            android:id="@+id/nodataFoundMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="No previous invoices are available"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="#FC888686"
                android:textStyle="bold"/>

         </LinearLayout>
    </RelativeLayout>

</LinearLayout>