<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:gravity="center_vertical|center_horizontal">

        <androidx.cardview.widget.CardView
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="@dimen/_300sdp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/dealPartnershipImage"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/tick_green"/>

                    <TextView
                        android:id="@+id/dealPartnershipDealName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:maxLength="15"
                        android:text="Twitter"
                        android:textSize="15dp"
                        android:maxHeight="80dp"
                        android:textStyle="bold"
                        android:typeface="sans" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="10dp"
                        android:padding="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/clicks_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Clicks"
                            android:textSize="15dp">

                        </TextView>

                        <TextView
                            android:id="@+id/numberOfClicks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="275,6K"
                            android:layout_marginRight="10dp"
                            android:layout_alignParentRight="true"
                            android:textSize="15dp"
                            android:textStyle="bold">
                        </TextView>
                        <TextView
                            android:layout_below="@id/clicks_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Added to Cart"
                            android:textSize="15dp">

                        </TextView>

                        <TextView
                            android:id="@+id/noOfSales"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="275,6K"
                            android:layout_alignParentRight="true"
                            android:layout_below="@id/numberOfClicks"
                            android:layout_marginRight="10dp"
                            android:textSize="15dp"
                            android:textStyle="bold">

                        </TextView>

                <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reached Checkout"
                            android:layout_below="@id/noOfSales"
                            android:textSize="15dp">
                        </TextView>

                        <TextView
                            android:id="@+id/commissionmot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="275,6K"
                            android:layout_below="@id/noOfSales"
                            android:textSize="15dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:textStyle="bold">
                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sales Volume"
                            android:layout_below="@id/commissionmot"
                            android:textSize="15dp">
                        </TextView>

                        <TextView
                            android:id="@+id/saleVolume"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="275,6K"
                            android:layout_below="@id/commissionmot"
                            android:textSize="15dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:textStyle="bold">
                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Revenue"
                            android:layout_below="@id/saleVolume"
                            android:textSize="15dp">
                        </TextView>

                        <TextView
                            android:id="@+id/revenue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="275,6K"
                            android:layout_below="@id/saleVolume"
                            android:textSize="15dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:textStyle="bold">
                        </TextView>

                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>