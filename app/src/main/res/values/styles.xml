<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="white_btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">@dimen/_30sdp</item>
        <item name="android:layout_marginLeft">@dimen/_20sdp</item>
        <item name="android:layout_marginRight">@dimen/_20sdp</item>
        <item name="android:backgroundTint">@color/white_text</item>
        <item name="android:background">@drawable/ripple_effect_buttons</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="contentDescription">todo</item>
    </style>
    <style name="black_btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:layout_marginLeft">@dimen/_20sdp</item>
        <item name="android:layout_marginRight">@dimen/_20sdp</item>
        <item name="android:backgroundTint">@color/black_text</item>
        <item name="android:background">@drawable/ripple_effect_buttons</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textStyle">bold</item>
        <item name="contentDescription">todo</item>
    </style>
    <style name="who_style_type_select">
        <item name="android:textSize">@dimen/_22sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:textColor">@color/black_text</item>
    </style>
    <style name="header_text_style">
        <item name="android:textSize">@dimen/_30sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginLeft">@dimen/_20sdp</item>
        <item name="android:textColor">@color/black_text</item>
    </style>
    <style name="header_text_desc_style">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxHeight">@dimen/_50sdp</item>
        <item name="android:layout_marginTop">@dimen/_2sdp</item>
        <item name="android:layout_marginLeft">@dimen/_20sdp</item>
        <item name="android:textColor">@color/gray_color</item>
    </style>
    <style name="input_fields_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_marginLeft">@dimen/_20sdp</item>
        <item name="android:layout_marginRight">@dimen/_20sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:padding">@dimen/_10sdp</item>
    </style>
    <style name="view_line_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_1sdp</item>
        <item name="android:background">@color/black_text</item>
        <item name="android:maxHeight">@dimen/_1sdp</item>
        <item name="android:layout_marginLeft">@dimen/_20sdp</item>
        <item name="android:layout_marginRight">@dimen/_20sdp</item>
    </style>
    <style name="skip_style">
        <item name="android:layout_width">@dimen/_40sdp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">@color/gray_color</item>
        <item name="android:layout_margin">@dimen/_20sdp</item>
    </style>

    <style name="social_reach_head_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:maxWidth">@dimen/_100sdp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/_20sdp</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:textColor">@color/black_text</item>
    </style>
    <style name="social_reach_connect_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">@dimen/_20sdp</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:textColor">@color/gray_color</item>
    </style>

    <style name="deal_xml_style">
        <item name="android:layout_width">@dimen/_80sdp</item>
        <item name="android:layout_height">@dimen/_20sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_below">@id/deal_user_image</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/gray_color</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
    </style>

    <style name="deals_value_style">
        <item name="android:layout_width">@dimen/_80sdp</item>
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:ellipsize">start</item>
        <item name="android:maxHeight">@dimen/_50sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_below">@id/clicks_txt</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:maxWidth">@dimen/_100sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">12,345</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
