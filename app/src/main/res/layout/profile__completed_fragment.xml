<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/green_tick"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_130sdp"
        android:layout_marginRight="@dimen/_100sdp"
        android:layout_marginLeft="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_100sdp"
        android:src="@drawable/tick_green"
        />
    <TextView
        android:id="@+id/sign_up_t"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/complete_profile"
        android:gravity="center"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_below="@id/green_tick"
        style="@style/header_text_style"/>
    <TextView
        android:id="@+id/sign_up_t_desc"
        android:text="@string/complete_profile_desc"
        android:layout_below="@id/sign_up_t"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/_240sdp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        style="@style/header_text_desc_style"/>


    <Button
        android:id="@+id/complete_profile_btn"
        android:layout_height="@dimen/_50sdp"
        android:layout_width="match_parent"
        android:background="@drawable/rounded_buttons"
        android:backgroundTint="#3CC480"
        android:text="@string/lets_go"
        android:textSize="@dimen/_16sdp"
        android:textColor="@color/white_text"
        android:textStyle="bold"
        android:layout_margin="@dimen/_20sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_20sdp"
        />
</RelativeLayout>