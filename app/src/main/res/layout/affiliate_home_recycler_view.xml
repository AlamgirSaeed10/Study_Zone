<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_text"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_all_bg"
        android:padding="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/followed_user_image"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/download"
        />
    <TextView
        android:id="@+id/followed_user_username"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_40sdp"
        android:maxWidth="@dimen/_200sdp"
        android:text="@string/username"
        android:layout_toRightOf="@id/followed_user_image"
        android:layout_marginStart="@dimen/_10sdp"
        android:gravity="center"
        android:textSize="@dimen/_18sdp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <ImageView
        android:id="@+id/followed_user_post_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_280sdp"
        android:src="@drawable/download"
        android:layout_below="@id/followed_user_image"
        android:layout_marginTop="@dimen/_5sdp"/>
    <TextView
        android:id="@+id/followed_user_image_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_40sdp"
        android:maxLines="3"
        android:ellipsize="end"
        android:text="@string/test_String1"
        android:layout_below="@id/followed_user_post_image"
        android:layout_marginTop="@dimen/_5sdp"/>
    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/ic_comment"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/followed_user_post_image"
        />
    </RelativeLayout>
</RelativeLayout>
