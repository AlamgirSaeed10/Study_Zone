<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/back_image"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/ic_back_btn"
        android:layout_margin="@dimen/_20sdp"
        android:contentDescription="@string/todo"
        />
    <TextView
        android:id="@+id/skip_bio_tv"
        android:text="@string/skip"
        style="@style/skip_style" />
    <TextView
        android:id="@+id/sign_up_t"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/portfolio"
        android:layout_below="@id/back_image"
        style="@style/header_text_style"/>
    <TextView
        android:id="@+id/sign_up_t_desc"
        android:text="@string/portfolio_desc"
        android:layout_below="@id/sign_up_t"
        style="@style/header_text_desc_style"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/sign_up_t_desc"
        android:layout_height="wrap_content"
        android:layout_above="@id/portfolio_upload_btn"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:gravity="center_vertical|center_horizontal"
        >
    <ImageView
        android:id="@+id/portfolio_image_1"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_130sdp"
        android:src="@drawable/type_selection_image"
        />
    <ImageView
        android:id="@+id/portfolio_image_2"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_130sdp"
        android:src="@drawable/type_selection_image"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_toRightOf="@+id/portfolio_image_1"/>
      <ImageView
        android:id="@+id/portfolio_image_3"
        android:layout_width= "@dimen/_130sdp"
        android:layout_height="@dimen/_130sdp"
        android:layout_below="@id/portfolio_image_2"
        android:src="@drawable/type_selection_image"
       />
    <ImageView
        android:id="@+id/portfolio_image_4"
        android:layout_below="@id/portfolio_image_2"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_130sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_toRightOf="@id/portfolio_image_3"
        android:src="@drawable/type_selection_image"
        />
    <ImageView
        android:id="@+id/portfolio_image_5"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_130sdp"
        android:layout_below="@id/portfolio_image_4"
        android:src="@drawable/type_selection_image"
        />
      <ImageView
        android:id="@+id/portfolio_image_6"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_130sdp"
        android:layout_marginLeft="@dimen/_10sdp"
          android:layout_below="@id/portfolio_image_4"
          android:layout_toRightOf="@id/portfolio_image_5"
        android:src="@drawable/type_selection_image"
          />


    </RelativeLayout>
    </ScrollView>
    <Button
        android:id="@+id/portfolio_upload_btn"
        style="@style/black_btn_style"
        android:text="@string/upload"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_20sdp"
        />
</RelativeLayout>