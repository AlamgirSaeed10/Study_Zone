<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:orientation="horizontal"
        android:background="@color/white_text"
        android:layout_centerHorizontal="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/back_image"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_back_btn"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/_10sdp"
                android:contentDescription="@string/todo"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/tick_green" />
            <TextView
                android:id="@+id/user_name_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/_100sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_toRightOf="@id/profile_image"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/nike"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"

                />
            <TextView
                android:id="@+id/active_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/active_now"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_toRightOf="@id/profile_image"
                android:gravity="center"
                android:layout_marginTop="-5dp"
                android:layout_below="@id/user_name_display"
                />

        </RelativeLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/message_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/layout_chatbox"
        android:layout_below="@id/linear"
        android:layout_margin="@dimen/_10sdp"
        tools:listitem="@layout/message_chat_bubbles" />
    <LinearLayout
        android:id="@+id/layout_chatbox"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
            <Button
                android:id="@+id/button_chatbox_attachment"
                android:textSize="@dimen/_10sdp"
                android:foreground="@android:drawable/ic_menu_camera"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_margin="@dimen/_10sdp"
                android:gravity="center"
                android:layout_gravity="center" />
            <EditText
                android:id="@+id/reply_message_edt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_55sdp"
                android:hint="@string/bio_hint"
                android:layout_marginLeft="@dimen/_40sdp"
                android:layout_gravity="center"
                android:inputType="textMultiLine"
                android:maxLines="6"
                />
            <Button
                android:id="@+id/button_chatbox_send"
                android:text="@string/send"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/black_text"
                android:layout_width="@dimen/_30sdp"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/_10sdp"
                />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>